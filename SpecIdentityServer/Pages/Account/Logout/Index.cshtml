@page
@model SpecIdentityServer.Pages.Logout.Index

<div class="logout-page">
	<div class="lead">
		<h1>Logout</h1>
		<p>Would you like to logout of IdentityServer?</p>
	</div>

	<div class="form-group">
		<table>
			<tr>
				<td>
					<form asp-page="/Account/Logout/Index">
						<input type="hidden" name="logoutId" value="@Model.LogoutId" />
						<button type="submit" class="btn btn-primary">Yes</button>
					</form>
				</td>
				<td>
					<form asp-page="/Index">
						<button class="btn btn-secondary back-to-previous-page">No</button>
					</form>
				</td>
			</tr>
		</table>
	</div>

</div>